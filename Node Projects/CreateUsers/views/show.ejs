<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Users</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <a href="/" class="show">Create the User</a>
  <div class="show-container">
    <h2>Show the Users</h2>
    
    <div class="user-container">

      <!-- Users Start Here -->
       <%if(users.length>0){
        users.forEach(function(user){%>
          <div class="user">
            <div class="img"><img src="<%=user.image%>" alt=""></div>
            <h3><%=user.name%></h3>
            <p class="email"><%=user.email%></p>
            <div class="buttons">
              <a href="/edit/<%=user._id%>" id="edit">Edit</a>
              <a href="/delete/<%=user._id%>" id="del">Delete</a>
            </div>
          </div>
      <%  }) %>
      <%}else{%>
        <h1 style="margin-top: 40px;">No Users Found</h1>

       <%}%>
      
      





    </div>
    
    
  </div>
</body>
</html>